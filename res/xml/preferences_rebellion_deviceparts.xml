<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:key="torch"
        android:title="@string/torch_title">

        <com.rebellion.deviceparts.preferences.CustomSeekBarPreference
            android:defaultValue="100"
            android:key="torch_brightness"
            android:max="255"
            app:min="1"
            android:icon="@drawable/ic_torch"
            android:title="@string/torch_brightness_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="vibration"
        android:title="@string/vibration_title">

        <com.rebellion.deviceparts.preferences.VibratorStrengthPreference
            android:defaultValue="80"
            android:key="vibration_strength"
            android:icon="@drawable/ic_vibrate"
            android:title="@string/vibration_strength_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="display"
        android:title="@string/display_title">

        <Preference
            android:key="device_kcal"
            android:persistent="false"
            android:icon="@drawable/ic_kcal"
            android:title="@string/device_kcal_title"
            android:summary="@string/kcal_enabled_summary">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="com.rebellion.deviceparts.kcal.KCalSettingsActivity"
                android:targetPackage="com.rebellion.deviceparts.kcal" />
        </Preference>

        <SwitchPreference
            android:key="fps_info"
            android:icon="@drawable/ic_fps_info"
            android:title="@string/fps_info_title"
            android:summary="@string/fps_info_summary"
            android:persistent="true" />

    </PreferenceCategory>

    <PreferenceCategory
            android:title="@string/touch_gestures">

        <PreferenceScreen
            android:key="ambient_display_gestures"
            android:fragment="com.rebellion.deviceparts.ambient.AmbientGesturePreferenceActivity"
            android:summary="@string/ambient_display_gestures_summary"
            android:icon="@drawable/ic_doze"
            android:title="@string/ambient_display_gestures_title" />

    </PreferenceCategory>

</PreferenceScreen>
